      "parameters": {
        "jsCode": "const html = $input.first().json.data;\nconst news = [];\n\n// Busca por padr√µes de links do G1\nconst matches = html.matchAll(/<a[^>]*href=\"([^\"]*g1\\.globo\\.com[^\"]*)\"[^>]*>([^<]+)<\\/a>/gi);\n\nlet count = 0;\nfor (const match of matches) {\n  if (count >= 10) break;\n  \n  const link = match[1];\n  const title = match[2].trim();\n  \n  if (title.length > 10 && !link.includes('javascript')) {\n    news.push({ title, link });\n    count++;\n  }\n}\n\nreturn [{ json: { news } }];"
      },
